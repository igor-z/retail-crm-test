{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ client.lastName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="form-group">
        <h3>History</h3>
        <ul class="list-group">
            {% for historyItem in history %}
                <li class="list-group-item">
                    <div>Changed at: {{ historyItem.loggedAt | date('Y-m-d H:i:s') }}</div>
                    {% for attributeName, attribute in historyItem.data %}
                        <div>{{ attributeName }}: {{ attribute }}</div>
                    {% endfor %}
                </li>
            {% endfor %}
        </ul>
    </div>

    <div class="form-group">
        <a class="btn btn-primary" href="{{ path('client_index') }}">back to list</a>
        <a class="btn btn-primary" href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

        {{ include('client/_delete_form.html.twig') }}
    </div>
{% endblock %}
